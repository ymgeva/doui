<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ymgeva.doui.shopping.ShoppingListFragment"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/plus"
        android:id="@+id/image_button_add_shopping"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_new_shopping"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/new_shopping_quantity"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:id="@+id/new_shopping_title"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_shopping_urgent_checkbox"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/urgent"/>
            </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_save_light"
            android:id="@+id/new_shopping_save"/>


    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp">
        <ListView
            android:id="@+id/listview_shopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/com_parse_ui_parse_login_button_focus"
            android:dividerHeight="4.0sp"/>
    </ScrollView>
</LinearLayout>

